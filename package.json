{
  "name": "devarmory",
  "displayName": "DevArmory",
  "description": "Build faster with all your frequently used tools in one extension.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:devarmory.helloWorld",
    "onCommand:devarmory.devarmory.dummyWorld",
    "onCommand:devarmory.askQuestion",
    "onCommand:devarmory.refresh",
    "onCommand:devarmory.addTodo",
    "onView:devarmory-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devarmory-sidebar-view",
          "title": "DevArmory",
          "icon": "media/rocket.svg"
        }
      ]
    },
    "views": {
      "devarmory-sidebar-view": [
        {
          "type": "webview",
          "id": "devarmory-sidebar",
          "name": "DevArmory",
          "icon": "media/rocket.svg",
          "contextualTitle": "DevArmory"
        }
      ]
    },
    "commands": [
      {
        "command": "devarmory.helloWorld",
        "category": "DevArmory",
        "title": "Hello World"
      },
      {
        "command": "devarmory.dummyWorld",
        "category": "DevArmory",
        "title": "Dummy World"
      },
      {
        "command": "devarmory.askQuestion",
        "category": "DevArmory",
        "title": "askQuestion"
      },
      {
        "command": "devarmory.refresh",
        "category": "DevArmory",
        "title": "Refresh"
      },
      {
        "command": "devarmory.addTodo",
        "category": "DevArmory",
        "title": "Add Todo From Selection"
      }
    ]
  },
  
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --config ./build/node-extension.webpack.config.js",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch --config ./build/node-extension.webpack.config.js\"",
    "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "concurrently": "^7.4.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.50.1",
    "svelte-check": "^2.9.1",
    "svelte-preprocess": "^4.10.7",
    "ts-loader": "^9.4.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {}
}
